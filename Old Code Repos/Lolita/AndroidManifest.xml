<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidproject.lolita"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddLocation"
            android:label="@string/title_activity_add_location" >
        </activity>
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page" >
        </activity>
        <activity
            android:name=".VirtualAssistantList"
            android:label="@string/title_activity_va_list" >
        </activity>
        <activity
            android:name=".VirtualAssistantAppointmentDetails"
            android:label="@string/title_activity_va_appointment_details" >
        </activity>
        <activity
            android:name=".VirtualAssistantWeather"
            android:label="@string/title_activity_va_weather" >
        </activity>
        <activity
            android:name=".VirtualAssistantMain"
            android:label="@string/title_activity_va_main" >
        </activity>
    </application>

</manifest>